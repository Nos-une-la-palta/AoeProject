<div class="row">
    <div class="col-3">
        <div class="card mt-3" style="width: 10rem;">
            <div class="card-header">
                Foros
            </div>
              <div class="card-body">
                <a href="/forum/threads"><i class="fa fa-circle"></i> All</a><br>
                <a href="/forum/threads/category/general"><i style="color: #4ea1d3" class="fa fa-circle"></i>General</a><br>
                <a href="/forum/threads/category/torneos"><i style="color: #eaf514" class="fa fa-circle"></i>Torneos</a><br>
                <a href="/forum/threads/category/tutoriales"><i style="color: #14f532" class="fa fa-circle"></i>Tutoriales</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <%#------------- Tournaments --------------------------------%>
        <% @tournaments.each do |tournament| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <%# <%= link_to(image_tag(tournament.picture.thumb), tournament) if tournament.picture? %>
                    <div class="caption">
                    <h3><%= tournament.title %></h3>
                    <h5><%= tournament.map %></h5>
                    <h5><%= tournament.modality %></h5>
                    <small><%= time_ago_in_words(tournament.created_at) %> ago</small>
                    <p><%= tournament.content.truncate(150)%></p>
                    </div>
                </div>
            </div>
        <% end %>
        <%#------------- News --------------------------------%>
        <% @news.each do |news| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail"> 
                    <%# <%= link_to(image_tag(news.picture.thumb), news) if news.picture? %>
                    <div class="caption">
                    <h3><%= news.title %></h3>

                    <small><%= time_ago_in_words(news.created_at) %> ago</small>
                    <p><%= news.content.truncate(150)%></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-3">
    </div>
</div>
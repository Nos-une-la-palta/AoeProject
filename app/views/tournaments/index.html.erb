<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-3">
  </div>
  <div class="col-6">
    <% @tournaments.each do |tournament| %>
        <div class="card tournament-card">
          <img src="https://i.imgur.com/yIJJo7v.png" class="card-img-top" alt="...">
            <div class="card-body">
              <div class="row">
                <div class="col-8">
                  <h5 class="card-title"><%= tournament.title %>, <%= tournament.modality%> </h5>
                </div>
                <div class="col-4">
                  <h5 class="card-text"><i class="fas fa-wallet"></i> Precio entrada:    <%= number_to_currency(tournament.value , precision: 0)%></h5>
                  <h5 class="card-text"><i class="fas fa-trophy"></i> Premio a repartir: <%= number_to_currency(tournament.price , precision: 0)%></h5>
                </div>
              </div>
              <p class="card-text mt-3"><%= tournament.content%></p>
              <p class="card-text"><small class="text-muted float-right"><%= tournament.created_at.to_date%></small></p>
            </div>
        </div>
        <p><%= link_to 'Show', tournament, class:"btn btn-warning mt-2" %>
        <%= link_to 'Edit', edit_tournament_path(tournament) , class:"btn btn-success mt-2"  %>
        <%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger mt-2"  %></p>
    <% end %>

  </div>
  <div class="col-3">
  <%= link_to 'New Tournament', new_tournament_path, class:"btn btn-info float-right mb-3"%>
  </div>
</div>


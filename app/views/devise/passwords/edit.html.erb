<div class=" container password">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", type:"password", placeholder:"nueva contraseña" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", type:"password", placeholder:"Confirma nueva contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar mi contraseña", class:"btn btn-password" %>
  </div>
<% end %>
</div>
